@model BMT.Customer.Web.Dtos.ProposalAcceptanceDto

<div>
    <h3>Proposal data</h3>
    <div class="row">
        Price: @Model.Price €
    </div>
    <div class="row">
        Departure Date: @Model.OutboundDate.ToString("yyyy-MM-dd")
    </div>
    <div class="row">
        Return Date: @Model.InboundDate.ToString("yyyy-MM-dd")
    </div>
    <div class="row">
        Passengers:
        <ul>
            @foreach (var passenger in Model.Passengers)
            {
                <li>
                    @passenger.FirstName @passenger.SecondName - @passenger.PassengerType
                </li>
            }
        </ul>
    </div>

    <div class="row margin-top">
        <form id="customerForm" name="customerForm" method="post" action="@Url.Action("ConfirmOffer","Acceptance")>
            <input type="hidden" value="@Model.ProposalId" name="proposalId" />
            <button type="submit" class="btn btn-primary">Send Offer / Accept</button>
            &nbsp;<span>@Html.ActionLink("Go to Proposals", "Index", "Proposals")</span>
        </form>
    </div>
</div>